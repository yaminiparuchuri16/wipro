@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<Role_Based_Product_Management.Models.ApplicationUser> SignInManager
@inject UserManager<Role_Based_Product_Management.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Role-Based Product App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ms-3" asp-controller="Product" asp-action="Index">Products</a>

        <div class="ms-auto me-3">
            @if (!SignInManager.IsSignedIn(User))
            {
                <!-- Visible when logged out -->
                <a class="btn btn-sm btn-outline-light me-2"
                   asp-controller="Account" asp-action="Register">Register</a>
                <a class="btn btn-sm btn-outline-light"
                   asp-controller="Account" asp-action="Login">Login</a>
            }
            else
            {
                <span class="text-white me-2">Hello, @User.Identity?.Name!</span>

                <!-- Only Admins see Register when logged in -->
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-sm btn-outline-light me-2"
                       asp-controller="Account" asp-action="Register">Register</a>
                }

                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button class="btn btn-sm btn-outline-light">Logout</button>
                </form>
            }
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["StatusMessage"] is string sm)
        {
            <div class="alert alert-success">@sm</div>
        }
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

