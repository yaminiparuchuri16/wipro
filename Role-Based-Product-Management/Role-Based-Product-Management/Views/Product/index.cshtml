@model IEnumerable<Role_Based_Product_Management.Models.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Products"; Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Products</h3>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-success" asp-action="Create">Create Product</a>
    }
</div>

<table class="table table-bordered bg-white">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model ?? Enumerable.Empty<Role_Based_Product_Management.Models.ViewModels.ProductViewModel>())
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price.ToString("C")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>

                    @* Show Delete link to both roles; Managers will be blocked by authorization *@
                    <a class="btn btn-sm btn-danger ms-1" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



